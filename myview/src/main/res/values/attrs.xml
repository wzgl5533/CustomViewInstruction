<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--输入框EditText-->
    <declare-styleable name="editTextStyle">
        <attr name="edt_delete_icon_width" format="dimension" /><!--右边删除图标宽度-->
        <attr name="edt_delete_icon_height" format="dimension" /><!--右边删除图标高度-->
    </declare-styleable>

    <!--CircleImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
    <!--AmountView-->
    <declare-styleable name="AmountView">
        <attr name="btnWidth" format="dimension"/> <!-- 左右2边+-按钮的宽度 -->
        <attr name="numTvWidth" format="dimension"/> <!-- 中间TextView的宽度 -->
        <attr name="numTextSize" format="dimension"/> <!-- 中间TextView的文字大小 -->
        <attr name="btnTextSize" format="dimension"/><!-- 左右2边+-按钮的文字大小 -->
        <attr name="btnTvColor" format="color"/><!-- 按钮文本颜色 -->
        <attr name="NumTvColor" format="color"/><!-- 中间文本颜色 -->
        <attr name="btnLeftBg" format="reference|color"/><!-- 左边按钮背景-->
        <attr name="btnRightBg" format="reference|color"/><!-- 右边按钮背景-->
        <attr name="numTvBg" format="reference|color"/><!--输入框背景-->
        <attr name="minValue" format="integer"/><!--能减到的最小值-->
        <attr name="maxValue" format="integer"/><!--能加到的最小值-->
        <attr name="minValueTip" format="string"/><!--减到的最小值提示-->
        <attr name="maxValueTip" format="string"/><!--加到的最小值提示-->
        <attr name="step" format="integer"/><!--变化步长-->
    </declare-styleable>

    <!--MyTimeButton-->
    <declare-styleable name="MyTimeButton">
        <attr name="textBefore" format="string"/><!--点击之前按钮显示文本-->
        <attr name="textAfter" format="string"/><!--点击之后按钮显示文本-->
        <attr name="timeLength" format="float"/><!--倒计时长度，单位为s-->
        <attr name="bg" format="reference|color"/><!--背景-->
    </declare-styleable>
    <!--RangeBarView-->
    <declare-styleable name="RangeBarView">
        <attr name="rect_line_height" format="dimension"/><!--轨道线框高度-->
        <attr name="rect_line_default_color" format="color"/><!--轨道线框默认颜色-->
        <attr name="rect_line_checked_color" format="color"/><!--轨道线框选中颜色-->
        <attr name="circle_radius" format="dimension"/><!--滑块半径-->
        <attr name="circle_stroke_width" format="dimension"/><!--滑块描边宽度-->
        <attr name="left_circle_solid_color" format="color"/><!--左边滑块填充颜色-->
        <attr name="left_circle_stroke_color" format="color"/><!--左边滑块描边颜色-->
        <attr name="right_circle_solid_color" format="color"/><!--右边滑块填充颜色-->
        <attr name="right_circle_stroke_color" format="color"/><!--右边滑块描边颜色-->
        <attr name="range_text_size" format="dimension"/><!--刻度范围文字大小-->
        <attr name="range_text_color" format="color"/><!--刻度范围文字颜色-->
        <attr name="view_text_space" format="dimension"/><!--刻度文本离轨道垂直距离-->
        <attr name="rect_price_desc_dialog_width" format="dimension"/><!--价格显示对话框宽度-->
        <attr name="rect_price_desc_dialog_color" format="color"/><!--价格显示对话框颜色,包括底部三角形颜色-->
        <attr name="rect_price_desc_dialog_corner_radius" format="dimension"/><!--价格显示对话框圆角半径-->
        <attr name="rect_price_desc_text_size" format="dimension"/><!--价格对话框文字大小-->
        <attr name="rect_price_desc_text_color" format="color"/><!--价格对话框文字颜色-->
        <attr name="rect_price_desc_space_to_progress" format="dimension"/><!--价格对话框离轨道垂直距离-->
    </declare-styleable>
    <!--CameraView-->
    <declare-styleable name="CameraView">
        <!--
          Set this to true if you want the CameraView to adjust its bounds to preserve the aspect
          ratio of its camera preview.
        -->
        <attr name="android:adjustViewBounds"/>
        <!-- Direction the camera faces relative to device screen. -->
        <attr name="cv_facing" format="enum">
            <!-- The camera device faces the opposite direction as the device's screen. -->
            <enum name="back" value="0"/>
            <!-- The camera device faces the same direction as the device's screen. -->
            <enum name="front" value="1"/>
        </attr>
        <!-- Aspect ratio of camera preview and pictures. -->
        <attr name="cv_aspectRatio" format="string"/>
        <!-- Continuous auto focus mode. -->
        <attr name="cv_autoFocus" format="boolean"/>
        <!-- The flash mode. -->
        <attr name="cv_flash" format="enum">
            <!-- Flash will not be fired. -->
            <enum name="off" value="0"/>
            <!--
              Flash will always be fired during snapshot.
              The flash may also be fired during preview or auto-focus depending on the driver.
            -->
            <enum name="on" value="1"/>
            <!--
              Constant emission of light during preview, auto-focus and snapshot.
              This can also be used for video recording.
            -->
            <enum name="torch" value="2"/>
            <!--
              Flash will be fired automatically when required.
              The flash may be fired during preview, auto-focus, or snapshot depending on the
              driver.
            -->
            <enum name="auto" value="3"/>
            <!--
              Flash will be fired in red-eye reduction mode.
            -->
            <enum name="redEye" value="4"/>
        </attr>
    </declare-styleable>
    <!--SignatureView-->
    <declare-styleable name="SignatureView">
        <attr name="sv_paint_width" format="dimension"/><!--画笔宽度-->
        <attr name="sv_paint_color" format="reference|color"/><!--画笔颜色-->
        <attr name="sv_canvas_color" format="reference|color"/><!--画布颜色-->
    </declare-styleable>

    <!--TextSwitchButton-->
    <declare-styleable name="TextSwitchButton">
        <attr name="tsb_left_text" format="string"/>
        <attr name="tsb_right_text" format="string"/>
        <attr name="tsb_text_size" format="dimension"/>
        <attr name="tsb_bg_color" format="color"/>
        <attr name="tsb_btn_color" format="color"/>
        <attr name="tsb_text_normal_color" format="color"/>
        <attr name="tsb_text_selected_color" format="color"/>
        <attr name="tsb_btn_width" format="dimension"/>
        <attr name="tsb_shape" format="enum">
            <enum name="rect" value="0"/>
            <enum name="round" value="1"/>
        </attr>
        <attr name="tsb_corner_radius" format="dimension"/>
    </declare-styleable>

    <!--复选按钮-->
    <declare-styleable name="SmoothCheckBox">
        <attr name="sc_duration" format="integer" /><!--动画持续时间-->
        <attr name="sc_stroke_width" format="dimension" /><!--未选中时边框宽度-->
        <attr name="sc_color_tick" format="color" /><!--对勾颜色-->
        <attr name="sc_color_checked" format="color" /><!--选中时填充颜色-->
        <attr name="sc_color_unchecked" format="color" /><!--未选中时填充颜色-->
        <attr name="sc_color_unchecked_stroke" format="color" /><!--未选中时边框颜色-->
    </declare-styleable>

    <!--侧滑-->
    <declare-styleable name="SwipeLayout">
        <attr name="drag_edge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="leftEdgeSwipeOffset" format="dimension" />
        <attr name="rightEdgeSwipeOffset" format="dimension" />
        <attr name="topEdgeSwipeOffset" format="dimension" />
        <attr name="bottomEdgeSwipeOffset" format="dimension" />
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0" />
            <enum name="pull_out" value="1" />
        </attr>
        <attr name="clickToClose" format="boolean" />
    </declare-styleable>
</resources>