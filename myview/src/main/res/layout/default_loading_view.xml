<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/base_shape_loading_3c_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/d7">

        <ProgressBar
            style="@style/baseLargerProgressBar"
            android:layout_width="@dimen/d35"
            android:layout_height="@dimen/d35"
            android:background="@color/base_transparent"/>

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d7"
            android:text="@string/base_loading"
            android:textColor="#BEBEBE"
            android:textSize="@dimen/d15"/>

</LinearLayout>
